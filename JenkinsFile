@Library('pipelib@master') _


node {
  def mvn = tool 'M3'
  def root = pwd()

 stage('Build/Install Job Common') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/dg-pz-jobcommon',
      branch: "master"
    ])
    sh """
      ${mvn}/bin/mvn install -U 
    """
  } 
  stage('Archive') {
    git([
      url: env.GIT_URL ? env.GIT_URL : 'https://github.com/venicegeo/dg-pz-jobmanager',
      branch: "master"
    ])
    sh """
      ${mvn}/bin/mvn clean package -U 
      cp target/piazza-jobmanager-1.0.0.jar ${root}/pz-jobmanager.jar
    """
  }

  stage('CI Deploy') {
    cfPush()
  }
}
